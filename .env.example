# =============================================================
# Newsletter — Environment Variables
# =============================================================

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/newsletter?sslmode=require"

# App
APP_HOST="http://localhost:3000"
NODE_ENV="development"

# Email (Resend)
EMAIL_PROVIDER="resend"
RESEND_API_KEY="re_xxxxxxxx"
EMAIL_FROM="Crowe Briefing <noreply@achyuthrachur.work>"
EMAIL_SHOW_STRAPLINE="false"

# OpenAI
OPENAI_API_KEY="sk-xxxxxxxx"
OPENAI_MODEL="gpt-4o-mini"

# Cron
CRON_ENABLED="true"
CRON_SECRET="generate-a-random-secret-here"

# Stage 2 — Web Search (off by default)
WEBSEARCH_ENABLED="false"
WEBSEARCH_MAX_QUERIES_PER_USER="8"
WEBSEARCH_RESULTS_PER_QUERY="5"
WEBSEARCH_MAX_TOOL_CALLS="12"

# Stage 3 — Deep Research (off by default)
DEEP_RESEARCH_ENABLED="false"
DEEP_DIVE_MAX_USERS_PER_TICK="3"
DEEP_DIVE_MAX_FETCH_PER_INVOCATION="4"
DEEP_DIVE_MAX_SOURCES="12"
DEEP_DIVE_MAX_SYNTHESIS_SOURCES="8"
DEEP_DIVE_OUTPUT_TOKENS="1200"
NEXT_PUBLIC_DEEP_RESEARCH_ENABLED="false"

# Stage 4 — Feedback & Personalization (off by default)
FEEDBACK_ENABLED="false"
PERSONALIZATION_ENABLED="false"
